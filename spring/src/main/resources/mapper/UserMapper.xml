<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hcsy.spring.api.mapper.UserMapper">

    <!-- 结果映射 -->
    <resultMap id="BaseResultMap" type="com.hcsy.spring.entity.po.User">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="age" property="age" />
        <result column="email" property="email" />
        <result column="password" property="password" />
        <result column="role" property="role" />
        <result column="login_status" property="loginStatus" />
    </resultMap>

    <!-- 根据用户名模糊查询用户，并按登录状态排序后分页，排除 AI 用户 -->
    <select id="selectUsersWithLoginStatus" resultMap="BaseResultMap">
        SELECT u.*,
        CASE
        <foreach collection="loginStatusMap" item="status" index="userId" separator=" ">
            WHEN u.id = #{userId} THEN #{status}
        </foreach>
            ELSE 0
        END as login_status
        FROM user u
        <where>
            <!-- 新增: 排除 role 为 ai 的用户 -->
            AND u.role != 'ai'
            <if test="username != null and username != ''">
                AND u.name LIKE CONCAT('%', #{username}, '%')
            </if>
        </where>
        ORDER BY login_status DESC, u.id ASC
        LIMIT #{pageSize} OFFSET #{offset}
    </select>

    <!-- 统计符合条件的用户总数，排除 AI 用户 -->
    <select id="countUsersByUsername" resultType="long">
        SELECT COUNT(*) FROM user u
        <where>
            <!-- 新增: 排除 role 为 ai 的用户 -->
            AND u.role != 'ai'
            <if test="username != null and username != ''">
                AND u.name LIKE CONCAT('%', #{username}, '%')
            </if>
        </where>
    </select>

</mapper>
